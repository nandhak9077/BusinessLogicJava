import java.util.Scanner;

public class Nine 
{
	public static void main(String[] args) 
	{
		Scanner s = new Scanner(System.in);
		System.out.print("Enter the number : ");
		int n = s.nextInt();
		int count=0;
		while(n!=0)
		{
			n=n/10;
			count++;
		}
		System.out.println("Number of digits in the number is : "+count);
		s.close();
	}
}
